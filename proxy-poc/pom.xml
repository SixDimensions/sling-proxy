    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        
        <!--
        NAME: surefire.useFile
        
        Description:  
        This prints test failures to stdout  
        -->
        <surefire.useFile>true</surefire.useFile>
        
        <!-- 
        NAME: bundle.*
        
        Description:
        Default definitions used for packaging the OSGi bundle.   They can be 
            overridden by any child project.
            The empty ones are here because the plugin breaks in unpredictable
            ways if you refer to a variable in the configuration that does
            not exist. 
        -->
        <bundle.export.package>{local-packages};version=${project.version}</bundle.export.package>
        <bundle.private.package></bundle.private.package>
        <bundle.import.package>*</bundle.import.package>
        
        <bundle.sling.resources></bundle.sling.resources>
        <bundle.description></bundle.description>
        <bundle.resources></bundle.resources>
        <bundle.activator></bundle.activator>
        
        <bundle.include.resource>{maven-resources}</bundle.include.resource>
        <bundle.embed.dependency></bundle.embed.dependency>
        <bundle.classpath>.,{maven-dependencies}</bundle.classpath>
        
        <slf4j.version>1.6.4</slf4j.version>
        <jackrabbit.version>2.4.0</jackrabbit.version>
        <spi2dav.version>2.4.0</spi2dav.version>
    </properties>
    
